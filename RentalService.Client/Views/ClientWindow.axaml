<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RentalService.Client.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RentalService.Client.Views.ClientWindow"
        Title="Editing a client"
        MaxWidth="500"
        SizeToContent="Height">
    
    <Design.DataContext>
        <vm:ClientViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <StyleInclude Source="/RentalServiceStyles.axaml"></StyleInclude>
    </Window.Styles>
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto, *">
        <Label VerticalAlignment="Center">LastName</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LastName}"></TextBox>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Command="{Binding OkButtonOnClick}">Ok</Button>
            <Button Click="CancelButton_OnClick">Cancel</Button>
        </StackPanel>
    </Grid>
    
</Window>
