
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:School.Client.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="School.Client.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="School.Client">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	
		<Window.Styles>
		<StyleInclude Source="/SchoolStyles.axaml"/>
		</Window.Styles>

	

	<Grid Classes="MainGrid" RowDefinitions="Auto,*">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			
			<Button Classes="ToolButton" Command="{Binding OnAddCommand}" > 
				<Image Source="/Assets/add.png"/>
			</Button>
			
			<Button Classes="ToolButton">
				<Image Source="/Assets/redact.png"/>
			</Button>			
			<Button Classes="ToolButton">
				<Image Source="/Assets/del.png"/>
			</Button>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="False"
				  Items="{Binding Classes}"
				  SelectedItem="{Binding SelectedClasses}">
			
			<DataGrid.Columns>
				<DataGridTextColumn Header="Школа" Binding="{Binding Number}"/>
				</DataGrid.Columns>
			
		</DataGrid>
		
	</Grid>

</Window>

