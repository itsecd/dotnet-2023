<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SelectionCommittee.Client.Views.FacultyWindow"
		xmlns:vm="using:SelectionCommittee.Client.ViewModels"
        Title="Редактирование факультетов"
		SizeToContent="Height"
		MaxWidth="1000">
  <Design.DataContext>
    <vm:FacultyViewModel/>
  </Design.DataContext>

  <Window.Styles>
    <StyleInclude Source="/SelectionCommitteeStyles.axaml"/>
  </Window.Styles>

  <Grid Classes="MainGrid" RowDefinitions="Auto, Auto, *" ColumnDefinitions="Auto">
    <Label Grid.Row="0" Grid.Column="0">Название</Label>
    <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Name}"/>

    <StackPanel Grid.Row="2" Orientation="Horizontal">
      <Button IsDefault="True" Command="{Binding OnSubmitCommand}">OK</Button>
      <Button IsCancel="True" Click="CancelButton_OnClick">Отмена</Button>
    </StackPanel>
  </Grid>

</Window>
