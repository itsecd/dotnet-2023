<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SocialNetwork.Client.Views.MainWindow"
        Title="SocialNetwork.Client">

	<Window.Styles>
		<StyleInclude Source="/SocialNetworkStyles.axaml"/>
	</Window.Styles>
	
	<Grid Classes="MainGrid" RowDefinitions="Auto,*">
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button>Добавить</Button>
			<Button>Редактировать</Button>
			<Button>Удалить</Button>
		</StackPanel>
		<DataGrid Grid.Row="1" AutoGenerateColumns="True" 
				  Items="{Binding Groups}">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Наименование"/>
			</DataGrid.Columns>
		</DataGrid>
	</Grid>

</Window>
